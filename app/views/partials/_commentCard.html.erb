<div class="horizontal-panel space-y flex flex-col border-black">
  <div class="flex flex-col px-5">
    <% if comments.any? %>
      <% comments.includes(:author).each do |comment| %>
        <div class="flex items-center">
          <p class="text-lg font-bold mr-5">
            <%= comment.author.name %> : 
          </p>
          <p class="text-sm">
            <%= comment.text %>
          </p>
        </div>
      <% end %>
    <% else %>
      <p>No Comment</p>
    <% end %>
  </div>
</div>
